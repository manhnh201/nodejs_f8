<div class="mt-2">
    <h3 class="text-center">Sửa tin tức</h3>

    <form class="mt-3" method="POST" action="/news/{{tintuc._id}}?_method=PUT">
        <div class="row form-group">
            <label class="col-sm-3" for="title">Tiêu đề (*):</label>
            <input type="text" class="col-sm-9 form-control" value="{{tintuc.title}}" id="title" name="title"
                placeholder="Nhập tiêu đề...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="description">Mô tả:</label>
            <input type="text" class="col-sm-9 form-control" value="{{tintuc.description}}" id="description"
                name="description" placeholder="Nhập mô tả...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="image">Ảnh (*):</label>
            <input type="text" class="col-sm-9 form-control" value="{{tintuc.image}}" id="image" name="image"
                placeholder="Nhập URL ảnh...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="videoId">Video ID (*):</label>
            <input type="text" class="col-sm-9 form-control" value="{{tintuc.videoId}}" id="videoId" name="videoId"
                placeholder="Nhập VideoId...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="content">Nội dung:</label>
            <textarea class="col-sm-9 form-control" id="content" name="content"
                placeholder="Nhập nội dung...">{{tintuc.content}}</textarea>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Cập nhập</button>
            <a class="btn btn-danger" href="/me/stored/news">Hủy</a>
        </div>
    </form>
</div>