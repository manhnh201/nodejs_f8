<div class="mt-4">
    <h3 class="text-center">Đăng tin tức</h3>

    <form class="mt-3" method="POST" action="/news/store">
        <div class="row form-group">
            <label class="col-sm-3" for="title">Tiêu đề (*):</label>
            <input type="text" class="col-sm-9 form-control" id="title" name="title" placeholder="Nhập tiêu đề...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="description">Mô tả:</label>
            <input type="text" class="col-sm-9 form-control" id="description" name="description"
                placeholder="Nhập mô tả...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="image">Ảnh (*):</label>
            <input type="text" class="col-sm-9 form-control" id="image" name="image" placeholder="Nhập URL ảnh...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="videoId">Video ID (*):</label>
            <input type="text" class="col-sm-9 form-control" id="videoId" name="videoId" placeholder="Nhập VideoId...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="content">Nội dung:</label>
            <textarea class="col-sm-9 form-control" id="content" name="content"
                placeholder="Nhập nội dung..."></textarea>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Thêm tin tức</button>
            <a class="btn btn-danger" href="/me/stored/news">Hủy</a>
        </div>
    </form>
</div>