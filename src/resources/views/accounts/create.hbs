<div class="mt-4">
    <h3 class="text-center">Thêm tài khoản</h3>

    <form class="mt-3" method="POST" action="/accounts/store">
        <div class="row form-group">
            <label class="col-sm-3" for="username">Tên đăng nhập (*):</label>
            <input type="text" class="col-sm-9 form-control" id="username" name="username"
                placeholder="Email/Số điện thoại...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="password">Mật khẩu (*):</label>
            <input type="password" class="col-sm-9 form-control" id="password" name="password"
                placeholder="Nhập mật khẩu...">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Thêm tài khoản</button>
            <a class="btn btn-danger" href="/me/stored/accounts">Hủy</a>
        </div>
    </form>
</div>