<div class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="gallaryImg">
                    <img src="{{product.image}}" alt="" class="img-fluid img-thumbnail">
                </div>
            </div>
            <div class="col-md-8">
                <div class="product-title">
                    <h3>{{product.name}}</h3>
                    <div class="product-price">
                        <span>{{product.price_new}}</span> <del>{{product.price_old}}</del>
                    </div>
                    <form action="">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td><label for="">Màu sắc :</label></td>
                                    <td>
                                        <div class="product-color bg-danger"><a href=""></a></div>
                                        <div class="product-color bg-success"><a href=""></a></div>
                                        <div class="product-color bg-primary"><a href=""></a></div>
                                    </td>
                                <tr>
                                    <td><label for="">Bộ nhớ :</label></td>
                                    <td>
                                        <div class="product-size"><a href="">64GB</a></div>
                                        <div class="product-size"><a href="">128GB</a></div>
                                        <div class="product-size"><a href="">512GB</a></div>
                                    </td>
                                </tr>
                                </tr>
                            </tbody>
                        </table>
                        <div class="number">
                            <span class="minus">-</span>
                            <input type="text" value="1">
                            <span class="plus">+</span>
                        </div>
                        <div class="addcard">
                            <button class="btn btn-dark"><i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                hàng</button>
                        </div>
                        <div class="product-description my-3">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item"><a href="#menu1" class="nav-link active" data-toggle="tab"><i
                                            class="fa-solid fa-circle-info"></i> THÔNG
                                        TIN SẢN PHẨM</a></li>
                            </ul>
                            <!-- tab content -->
                            <div class="tab-content">
                                <div id="menu1" class="active tab-pane">
                                    <p>{{product.prod_if}}</p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-title {
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 10px;
    }

    .product-price {
        padding: 6px 0 10px 0;
    }

    .product-price span {
        font-weight: bold;
        color: red;
        font-size: 20px;
    }

    .product-color {
        width: 35px;
        height: 35px;
        float: left;
        margin-right: 10px;
        cursor: pointer;
    }

    .product-size {
        width: 50px;
        height: 30px;
        background-color: #bdbdbd;
        float: left;
        margin-right: 10px;
        cursor: pointer;
    }

    .product-size a {
        color: #000;
        display: block;
        text-align: center;
    }

    .number {
        margin: 20px 0;
    }

    .number span {
        cursor: pointer;
    }

    .minus,
    .plus {
        width: 34px;
        height: 34px;
        background-color: #f2f2f2;
        padding: 5px 9px;
        border: 1px solid #ddd;
        display: inline;
        border-radius: 5px;
        vertical-align: middle;
    }

    .number input {
        height: 32px;
        width: 100px;
        border-radius: 5px;
        display: inline-block;
        text-align: center;
        border: 1px solid #ddd;
        vertical-align: middle;
        font-size: 24px;
    }

    .addcard button {
        width: 100%;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 150) {
                $("nav").addClass('fixed-top');
            } else
                $("nav").removeClass('fixed-top')
        });
    });
    $(document).ready(function () {
        $('.minus').click(function () {
            var input = $(this).parent().find('input');
            var count = parseInt(input.val()) - 1;
            count = count < 1 ? 1 : count;
            input.val(count);
            input.change();
            return false;
        });
        $('.plus').click(function () {
            var input = $(this).parent().find('input');
            var count = parseInt(input.val()) + 1;
            input.val(count);
            input.change();
            return false;
        });
    });
</script>