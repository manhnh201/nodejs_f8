<div class="mt-2">
    <h3 class="text-center">Sửa sản phẩm</h3>

    <form class="mt-3" method="POST" action="/products/{{product._id}}?_method=PUT">
        <div class="row form-group">
            <label class="col-sm-3" for="name">Tên sản phẩm (*):</label>
            <input type="text" class="col-sm-9 form-control" value="{{product.name}}" id="name" name="name"
                placeholder="Nhập tên sản phẩm...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="price_new">Giá mới (*):</label>
            <input type="text" class="col-sm-9 form-control" value="{{product.price_new}}" id="price_new"
                name="price_new" placeholder="Nhập giá sản phẩm...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="price_old">Giá cũ:</label>
            <input type="text" class="col-sm-9 form-control" value="{{product.price_old}}" id="price_old"
                name="price_old" placeholder="Nhập giá sản phẩm...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="description">Mô tả:</label>
            <input type="text" class="col-sm-9 form-control" value="{{product.description}}" id="description"
                name="description" placeholder="Nhập mô tả...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="image">Ảnh (*):</label>
            <input type="text" class="col-sm-9 form-control" value="{{product.image}}" id="image" name="image"
                placeholder="Nhập URL ảnh...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="videoId">Video ID:</label>
            <input type="text" class="col-sm-9 form-control" value="{{product.videoId}}" id="videoId" name="videoId"
                placeholder="Nhập VideoId...">
        </div>
        <div class="row form-group">
            <label class="col-sm-3" for="prod_if">Thông tin sản phẩm:</label>
            <textarea class="col-sm-9 form-control" id="prod_if" name="prod_if"
                placeholder="Nhập thông tin sản phẩm...">{{product.prod_if}}</textarea>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Cập nhập</button>
            <a class="btn btn-danger" href="/me/stored/products">Hủy</a>
        </div>
    </form>
</div>